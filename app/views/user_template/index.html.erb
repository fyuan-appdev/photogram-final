<h1>List of users</h1>

<hr>

<table border="1">
  <tr>
    <th>
      Username
    </th>
    <th>
      Private?
    </th>
    <%if @current_user!= nil%>

      <th></th>
    
    <%end%>
    <th></th>
  </tr>


  <% @list_of_users.each do |a_user| %>
  <tr>
    <td>
      <%= a_user.username%>
    </td>
    <td>

      <%if a_user.private ==false%>
        No
      <% else%>
        Yes
      <% end %>
    </td>

    <%if @current_user!= nil%>

      <td>Follow</td>
    
    <%end%>

    <td>
      <a href="/users/<%= a_user.username %>">
        Show details
    </td>
  </tr>
  <% end %>
</table>

</body>
